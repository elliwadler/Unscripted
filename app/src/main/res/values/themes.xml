<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.Unscripted" parent="Theme.MaterialComponents.DayNight">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/pinkish_red</item>
    <item name="colorPrimaryVariant">@color/pinkish_red_darker</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/green_cyan</item>
    <item name="colorSecondaryVariant">@color/green_cyan_light</item>
    <item name="colorOnSecondary">@color/black</item>
    <item name="backgroundColor">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
</style>

<style name="Theme.Unscripted.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>
</resources>