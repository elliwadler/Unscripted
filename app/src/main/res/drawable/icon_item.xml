<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <stroke
                android:width="@dimen/stroke_1dp"
            android:color="@color/blue" />  <!-- Set the desired border color -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000" /> <!-- Transparent color for unselected state -->
        </shape>
    </item>
</selector>