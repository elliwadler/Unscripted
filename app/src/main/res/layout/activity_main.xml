<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/text_greeting"
                    android:layout_marginTop="@dimen/et_32dp_margin"
                    android:text="Hello World!"
                    android:textStyle="bold"
                    android:textSize="@dimen/tv_20sp_textsize" />
            </androidx.appcompat.widget.Toolbar>



    <CalendarView
        android:id="@+id/calendar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/et_16dp_margin"
        android:theme="@style/Theme.Custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main_activity" />


    <TextView
        android:id="@+id/text_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/et_32dp_margin"
        android:layout_marginLeft="@dimen/et_20dp_margin"
        android:text="@string/recent"
        android:textAlignment="viewStart"
        android:textSize="@dimen/btn_24sp_textsize"
        app:layout_constraintTop_toBottomOf="@+id/calendar_1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/text_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/et_40dp_margin"
        android:layout_marginRight="@dimen/et_20dp_margin"
        android:text="@string/all"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/btn_18sp_textsize"
        android:textStyle="bold"


        app:layout_constraintTop_toBottomOf="@+id/calendar_1"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ListView
        android:id="@+id/list_recent_entries"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_16dp_margin"
        android:layout_marginTop="@dimen/et_16dp_margin"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/text_all"
        tools:ignore="MissingConstraints" />




        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="45dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
        app:srcCompat="@drawable/plus_icon1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/green_cyan_light" />


    </androidx.constraintlayout.widget.ConstraintLayout>

