<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_new_entry_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_new_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/tv_new_entry_text"
            android:textSize="@dimen/tv_20sp_textsize" />
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:id="@+id/sv_new_svcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_new_entry_activity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_new_maincontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_new_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/et_16dp_margin"
                android:hint="@string/til_new_entry_title_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGroup">

                <EditText
                    android:id="@+id/et_new_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/et_16dp_padding"
                    android:textSize="@dimen/et_16sp_textsize"/>

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:id="@+id/ll_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/et_16dp_margin"
                app:layout_constraintTop_toBottomOf="@+id/til_new_title">
            <ImageView
                android:id="@+id/img_picked"
                app:layout_constraintTop_toBottomOf="@+id/til_new_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@color/purply_blue_light"
                android:layout_width="200dp"
                android:layout_gravity="top"
                 android:layout_height="340dp"/>
            <LinearLayout
                android:id="@+id/ll_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                app:layout_constraintTop_toBottomOf="@+id/til_new_title">
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/et_16dp_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Happy"
                        android:padding="@dimen/btn_3dp_padding"
                        />

                    <RadioButton
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sad"
                        android:padding="@dimen/btn_3dp_padding"
                        />

                    <RadioButton
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Angry"
                        android:padding="@dimen/btn_3dp_padding"
                        />
                    <RadioButton
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excited"
                        android:padding="@dimen/btn_3dp_padding"
                        />
                    <RadioButton
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frustrated"
                        android:padding="@dimen/btn_3dp_padding"
                        />
                    <RadioButton
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calm"
                        android:padding="@dimen/btn_3dp_padding"
                        />

                </RadioGroup>

                <Button
                android:id="@+id/btn_new_addImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/btn_8dp_padding"
                android:text="Select Image"
                android:layout_marginLeft="@dimen/et_16dp_margin"
                android:layout_gravity="bottom"
                android:textSize="@dimen/btn_18sp_textsize"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/purply_blue_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_picked"/>
            </LinearLayout>
            </LinearLayout>


            <EditText
                android:id="@+id/til_new_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_8dp_padding"
                android:layout_marginTop="8dp"
                android:hint="Text"
                android:inputType="textMultiLine"
                android:padding="@dimen/et_16dp_padding"
                android:textSize="@dimen/et_16sp_textsize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_image" />

            <Button
                android:id="@+id/btn_register_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/et_16dp_margin"
                android:layout_marginTop="@dimen/et_32dp_margin"
                android:layout_marginEnd="@dimen/et_16dp_margin"
                android:padding="@dimen/btn_8dp_padding"
                android:text="@string/btn_save"
                android:textSize="@dimen/btn_18sp_textsize"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/pinkish_red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_new_text"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>