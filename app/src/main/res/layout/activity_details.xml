<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Memory"
            android:textSize="@dimen/tv_20sp_textsize" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_detail_activity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/text_date_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:text="@string/new_entry"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints,UnknownId" />

            <TextView
                android:id="@+id/text_title_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Title"
                android:letterSpacing="0.2"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/et_16dp_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_date_entry" />

            <TextView
                android:id="@+id/text_text_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/et_16dp_margin"
                android:justificationMode="inter_word"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:lineSpacingExtra="@dimen/m2dp"
                android:textColor="@color/darkgrey"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam at eros quis neque pellentesque aliquam at id ipsum. Maecenas dignissim tincidunt purus, id congue ligula hendrerit sed. Morbi feugiat convallis enim, vitae iaculis elit. Vestibulum finibus, mi id facilisis lobortis, dolor lacus lobortis odio, nec cursus ex urna eu ex. Duis eu arcu vitae sapien interdum mattis et vitae mauris. Suspendisse id turpis arcu. Curabitur laoreet magna nec purus auctor, vel luctus est pellentesque. In hac habitasse platea dictumst. Maecenas ultrices mauris id eros consectetur, sit amet pharetra ligula dictum. Sed mattis leo sed felis consequat, vitae iaculis justo feugiat. In consequat risus at dui auctor feugiat. Donec sit amet scelerisque tellus."
                android:textAlignment="viewStart"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_title_entry"/>

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="@dimen/et_16dp_margin"
                android:layout_marginTop="@dimen/et_16dp_margin"
                android:layout_marginBottom="@dimen/et_16dp_margin"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/text_text_entry">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/smile" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emotion"
                    android:padding="@dimen/btn_8dp_padding"
                    android:layout_marginRight="@dimen/btn_8dp_padding"
                    android:letterSpacing="0.1"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/clock_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30"
                    android:layout_marginRight="@dimen/btn_8dp_padding"
                    android:letterSpacing="0.1"
                    android:padding="@dimen/btn_8dp_padding"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/rain"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rainy"
                    android:letterSpacing="0.1"
                    android:padding="@dimen/btn_8dp_padding"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_photo_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Photos"
                android:letterSpacing="0.2"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/et_16dp_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_info" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scrollbarSize="0dp"
                app:layout_constraintTop_toBottomOf="@+id/text_photo_entry">

                <LinearLayout
                    android:id="@+id/ll_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/et_16dp_margin"
                    android:layout_marginTop="@dimen/et_16dp_margin"
                    android:layout_marginBottom="@dimen/et_16dp_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/placeholder"
                        android:layout_marginRight="@dimen/et_8dp_margin"
                        android:layout_gravity="center_vertical" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/placeholder"
                        android:layout_marginRight="@dimen/et_8dp_margin"
                        android:layout_gravity="center_vertical" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/placeholder"
                        android:layout_marginRight="@dimen/et_8dp_margin"
                        android:layout_gravity="center_vertical" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/placeholder"
                        android:layout_marginRight="@dimen/et_8dp_margin"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="45dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
        app:srcCompat="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/purply_blue" />
</androidx.constraintlayout.widget.ConstraintLayout>
